{
	"name": "jotai-gpu",
	"version": "0.0.0",
	"type": "module",
	"private": true,
	"description": "Declarative JÅtai-based API for TypeGPU",
	"packageManager": "pnpm@10.11.1+sha512.e519b9f7639869dc8d5c3c5dfef73b3f091094b0a006d7317353c72b124e80e1afd429732e28705ad6bfa1ee879c1fce46c128ccebd3192101f43dd67c667912",
	"author": "Iwo Plaza",
	"license": "MIT",
	"exports": {
		"./package.json": "./package.json",
		".": "./src/index.ts",
		"./react": "./src/react/index.ts"
	},
	"publishConfig": {
		"directory": "dist",
		"linkDirectory": false,
		"main": "./dist/index.js",
		"types": "./dist/index.d.ts",
		"exports": {
			"./package.json": "./package.json",
			".": {
				"types": "./dist/index.d.ts",
				"module": "./dist/index.js",
				"import": "./dist/index.js",
				"default": "./dist/index.cjs"
			},
			"./react": {
				"types": "./dist/react/index.d.ts",
				"module": "./dist/react/index.js",
				"import": "./dist/react/index.js",
				"default": "./dist/react/index.cjs"
			}
		}
	},
	"sideEffects": false,
	"files": ["src", "dist"],
	"scripts": {
		"build": "tsup",
		"test:types": "pnpm tsc --p ./tsconfig.json --noEmit",
		"publish": "echo \"Use pnpm prepare-package instead!\" && exit 1",
		"prepare-package": "node ./tools/prepack.mjs"
	},
	"keywords": [
		"jotai",
		"react",
		"typegpu",
		"webgpu",
		"graphics",
		"declarative"
	],
	"peerDependencies": {
		"jotai": ">=2.0.0",
		"typegpu": ">=0.5.8",
		"@types/react": ">=17.0.0",
		"react": ">=17.0.0"
	},
	"peerDependenciesMeta": {
		"@types/react": {
			"optional": true
		},
		"react": {
			"optional": true
		}
	},
	"devDependencies": {
		"@types/node": "^22.9.3",
		"@webgpu/types": "catalog:",
		"jotai": "^2.10.0",
		"remeda": "^2.17.3",
		"tsup": "^8.3.5",
		"vitest": "^2.1.5",
		"typegpu": "catalog:"
	}
}
