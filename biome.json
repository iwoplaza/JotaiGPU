{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["dist/**", ".astro"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"indentStyle": "space"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
